<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackMain">

   <TextView
    android:id="@+id/marquee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="marquee"
    android:marqueeRepeatLimit="marquee_forever"
    android:padding="10dp"
    android:scrollHorizontally="true"
    android:singleLine="true"
    android:text="Give Your Feedback For Betterment "
    android:textSize="25sp"
    android:textStyle="bold" />

    <EditText
        android:id="@+id/namee"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/marquee"
        android:ems="10"
        android:hint="Enter your Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/usn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/namee"
        android:ems="10"
        android:hint="Enter your USN"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/usn"
        android:ems="10"
        android:hint="Enter your Emailid"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/email"
        android:ems="10"
        android:hint="Enter Subject"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/feed"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/subject"
        android:ems="10"
        android:hint="Enter your feedback"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:background="@color/colorPrimaryDark"
        android:text="SUBMIT"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="162dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp" />


</RelativeLayout>