<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Aptitude.AptitudeMainActivity"
    tools:showIn="@layout/app_bar_aptitude_main"
    android:background="@drawable/apti">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/Aptitude"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3949AB"
            android:padding="10dp"
            android:text="APTITUDE PREPARATION"
            android:textAlignment="center"
            android:textColor="#FFEDEDF5"
            android:textSize="25sp" />


        <Button
            android:id="@+id/btnAptitude"
            android:layout_width="168dp"
            android:layout_height="50dp"

            android:layout_marginStart="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_button"
            android:text="APTITUDE"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20dp"

            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="195dp" />

        <Button
            android:id="@+id/btnLogical"
            android:layout_width="168dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_button"
            android:text="LOGICAL REASONING"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="195dp" />


        <Button
            android:id="@+id/btnVerbal"
            android:layout_width="168dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_button"
            android:text="VERBAL"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="195dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="168dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_button"

            android:text="TECHNICAL"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="195dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_button1"
            android:text="CANCEL"
            android:textAlignment="center"
            android:textColor="#FFEDEDF5"
            android:textSize="25sp" />/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>

