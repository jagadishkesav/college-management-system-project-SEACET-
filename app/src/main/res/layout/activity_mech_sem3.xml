<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notes.MECH.mech_sem3"
    android:orientation="vertical">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="203dp"
        android:layout_gravity="center"
        android:src="@drawable/firebase" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:text="Firebase Storage"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/textPdfName"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Enter your PDF file name: "
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button6"
        android:text="upload"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button6"
        android:onClick="btn_action"
        android:text="view pdf files"
        android:textColor="#fff" />


</LinearLayout>